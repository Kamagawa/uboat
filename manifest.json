{
    "manifest_version": 2,
  
    "name": "Play to JIRA",
    "description": "the app that helps you create Jira issue based on Google Player Console Input",
    "version": "1.0",
  
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "lib/popup.html"
    },
    "options_page": "lib/options.html",

    "background": {
      "scripts": ["lib/eventPage.js"],
      "persistent": false
    },

    "permissions": [
      "activeTab",
      "storage",
      "notifications",
      "contextMenus"
    ],
    "content_scripts" : [
      {
        "matches": ["https://github.com/*"],
        "js": [
          "external/jquery.min.js", 
          "external/vex.combined.min.js",
          "lib/inject.js"
        ],
        "css": [
          "external/vex.css",
          "external/vex-theme-os.css"
        ],
        "run_at": "document_end"
      }
    ]
  }

