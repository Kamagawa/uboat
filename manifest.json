{
    "manifest_version": 2,
  
    "name": "Play to JIRA",
    "description": "This extension allows you to create Jira issue directly from Google Player Console",
    "version": "1.0",
  
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "lib/popup.html"
    },
    "options_page": "lib/options.html",

    "permissions": [
      "activeTab",
      "storage",
      "notifications",
      "contextMenus",
      "https://jira.bbqnx.net/*"
    ],
    "content_scripts" : [
      {
        "matches": [
          "https://github.com/*",
          "http://github.com/*",
          "https://play.google.com/*",
          "http://play.google.com/*"
        ],
        "js": [
          
          "./external/jquery.min.js",           
          "./external/vex.combined.min.js",
          "./lib/final.utils.js",
          "./lib/tools.utils.js",
          "./lib/modal.template.js",
          "./lib/modal.component.js",
          "./lib/github.adaptor.js",
          "./lib/gplay.adaptor.js",
          "./lib/main.js"
        ],
        "css": [
          "external/vex.css",
          "external/vex-theme-os.css"
        ],
        "run_at": "document_end"
      }
    ]
  }

