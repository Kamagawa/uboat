{
    "manifest_version": 2,
  
    "name": "Play to JIRA",
    "description": "This extension allows you to create Jira issue directly from Google Player Console",
    "version": "1.0",
  
    "browser_action": {
      "default_icon": "icon.png"
    },
    "options_page": "lib/options/options.html",

    "permissions": [
      "activeTab",
      "storage",
      "notifications",
      "contextMenus",
      "https://jira.bbqnx.net/*"
    ],
    "background": {
      "scripts": [ "/lib/options/background.js" ]
    },
    "content_scripts" : [
      {
        "matches": [
          "*://play.google.com/*"
        ],
        "js": [
          "./external/jquery.min.js",   
          "./external/materialize.min.js",
          "./lib/utils/constants.js",
          "./lib/utils/parser.js",
          "./lib/api/jira.js",
          "./lib/modal/ask.js",
          "./lib/adaptor/gplay.js",
          "./lib/main.js"
        ],
        "css": [
          "/external/materialize.min.css"
        ],
        "run_at": "document_end"
      }
    ]
  }

